.circle-icon
  &:hover
    cursor pointer

  &.green
    &:hover
      &:before
        color $linkLightTeal !important
        border-color $linkLightTeal !important

  &.red
    &:hover
      &:before
        color $red !important
        border-color $red !important

  &.fa-plus
    position relative
    height 21px
    width 21px

    &:before
      absolute bottom 0
      font-size 11px
      border solid 1px $grayLight
      text-align center
      display block
      height 14px
      width 19px
      padding 5px 0px 0px 0px
      border-radius 20px
      color $grayLight

    &:hover
      cursor pointer
      &:before
        color $grayDark
        border-color $grayDark

